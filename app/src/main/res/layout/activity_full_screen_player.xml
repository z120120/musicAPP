<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- 添加专辑图片 ImageView -->
    <ImageView
        android:id="@+id/full_screen_album_art"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_album_art" />

    <TextView
        android:id="@+id/full_screen_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/full_screen_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/full_screen_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="32dp"/>

    <SeekBar
        android:id="@+id/full_screen_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:progressTint="@color/accent_color"
        android:thumbTint="@color/accent_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/full_screen_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="00:00"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/full_screen_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="00:00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <ImageButton
            android:id="@+id/full_screen_previous_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/black" />

        <ImageButton
            android:id="@+id/full_screen_play_pause_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:tint="@color/black" />

        <ImageButton
            android:id="@+id/full_screen_next_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/black" />

        <ImageButton
            android:id="@+id/full_screen_favorite_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_favorite_border"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@null" />

        <!-- 新增加入歌单按钮 -->
        <ImageButton
            android:id="@+id/full_screen_add_to_playlist_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_playlist_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/black" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/full_screen_play_mode_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_repeat"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:tint="@color/black" />

</LinearLayout>